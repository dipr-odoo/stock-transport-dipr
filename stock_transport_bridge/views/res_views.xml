<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_config_settings_view_form_inherit_stock_transport" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock_transport</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='shipping_setting_container']//setting[@id='stock_move_email']" position="after">
                <setting id="module_stock_transport_setting" string="Dispatch Management System" help="Install the dispatch management system alongwith">
                    <field name="module_stock_transport"/>
                </setting>
            </xpath>
        </field>
    </record>
    

</odoo>
