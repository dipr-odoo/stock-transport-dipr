<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="inherited_fleet_catogry" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.category.view.tree.inherit.stock.transport</field>
        <field name="model">fleet.vehicle.model.category</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_category_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position = "after" >
               
                  <field name = "max_weight" />
                  <field name = "max_volume"/>

            </xpath>
           
        </field>
    </record>

    <record id="inherited_batch_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherit.stock.transport</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position = "after" >
               <!-- <field name = "scheduled_date" /> -->
               <field name = "dock_id"/>
               <field name = "vehicle_id"/>
               <field name = "category_id"/>
                <field name = "weight_bar" widget="progressbar"/>
                <field name = "volume_bar" widget="progressbar"/>
                <!-- <field name = "total_weight"/> -->
            </xpath>
           
        </field>
    </record>

    <record id="inherited_from_vpick_tree" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.stock.transport</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position = "after" >
               <!-- <field name = "scheduled_date" /> -->
               <field name = "weight"/>
               <field name = "volume"/>
            </xpath>
           
        </field>
    </record>


    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form,graph,gantt</field>
        <field name="context">{'graph_groupbys': ['scheduled_date','category_id']}</field>
    </record>

    <record id="stock_picking_batch_graph_view" model="ir.ui.view">
        <field name="name">stock.picking.batch.graph.view</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph string="batch_transfers" sample="1">
                <field name="total_volume" type = "measure" />
                <field name="total_weight" type = "measure" />
                <field name="no_of_transfers" type="measure"/>
                <field name="no_of_lines" type="measure"/>
                <field name="volume_bar" invisible="1" />
                <field name="weight_bar" invisible="1"/>

                <field name = "category_id" />
                <field name = "scheduled_date" interval="day"/>
                <!-- <field name = "scheduled_date"/> -->
                
            </graph>
        </field>
    </record>
   
    <record id="view_stock_picking_batch_gantt" model="ir.ui.view">
        <field name="name">stock.picking.batch.gantt.view</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt 
                date_start="scheduled_date" 
                date_stop="scheduled_date" 
                default_group_by='dock_id,vehicle_id'
                default_scale="week"
                decoration-info="state == 'draft'"
                decoration-success="state == 'done'"
                color="dock_id"
            >
            <field name='state' invisible='1'/>
            </gantt>
        </field>
    </record>

    
    

</odoo>
